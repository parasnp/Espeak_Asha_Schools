@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> sm
@inject UserManager<IdentityUser> um

<ul class="navbar-nav">
    @if (sm.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link">Hello,@um.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
        </li
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>